<PopupLabelCell>
    size_hint: (None, None)
    height: 30
    text_size: self.size
    halign: "left"
    valign: "middle"

<EditStatePopup>:
    container: container
    size_hint: None, None
    size: 450, 500
    title_size: 20
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"

        GridLayout:
            id: container
            cols: 2
            row_default_height: 30
            cols_minimum: {0: 50, 1: 300}
            # spacing: 10, 10
            # padding: 20, 20
            size_hint: (None, None)
            height: self.minimum_height

        Label:
            id: alert
            color: 1, 0, 0, 1
            text: ''

        BoxLayout:
            size_hint_y: .8
            spacing: 1
            padding: 1
            NavbarButton:
                size_hint: 1, 0.4
                text: "Save"
                on_release:
                    root.save()
            NavbarButton:
                size_hint: 1, 0.4
                text: "Cancel"
                on_release:
                    root.dismiss()
